<% if flash.has?(:message) %>
<%= flash[:message] %>
<% end %>

<h3>Action #<%= @action.id %></h3>
  <p>
    <b>Action Name:</b> <%= @action.action_name %><br>
    <b>Action Status:</b> <%= @action.status %>
  </p>
    <h5>
      <a href="/actions/<%= @action.id %>/edit">Edit this action</a>
    </h5>
    <br>

  <!-- delete action-->
     <form action="/actions/<%= @action.id %>" method="POST">
       <input type="hidden" name="_method" value="DELETE" id="hidden">
       <button type="submit" input type="submit" name="submit" value="Delete Action" class="btn btn-primary">Delete</button>
    </form>
